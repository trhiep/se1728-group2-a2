@page
@model SE1728_Group2_A2.Pages.Staffs.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Staff</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Staff.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Staff.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Staff.Password)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Staff.Password)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Staff.RoleName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Staff.RoleName)
        </dd>
    </dl>

    <form id="myForm" method="post">
        <input type="hidden" asp-for="Staff.StaffId" />
        <button type="button" onclick="showConfirmDialog()" class="btn btn-danger">Delete</button>
        | <a asp-page="./Index" class="btn btn-dark">Back to List</a>
    </form>
</div>

<div id="confirmationModal" class="modal" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmation</h5>
                <button onclick="hideConfirmDialog()" type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this staff?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" onclick="hideConfirmDialog()">Cancel</button>
                <button type="submit" form="myForm" class="btn btn-danger">Delete</button>
            </div>
        </div>
    </div>
</div>

<script>
    function showConfirmDialog() {
        const modal = document.getElementById('confirmationModal');
        modal.style.display = "block";

        // Add click event listener to close modal on clicking outside the dialog
        window.onclick = function (event) {
            if (event.target === modal) {
                modal.style.display = "none";
            }
        }
    }
    function hideConfirmDialog() {
        const modal = document.getElementById('confirmationModal');
        modal.style.display = "none";
    }
</script>
