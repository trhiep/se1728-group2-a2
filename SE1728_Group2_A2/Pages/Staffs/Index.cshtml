@page "/Staffs/Index"
@model SE1728_Group2_A2.Pages.Staffs.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>List Staffs</h1>

<p>
    <a class="btn btn-primary" asp-page="Create">Create New</a>
</p>

<form asp-page="./Index" method="get">
    <label for="searchByName">Search staffs by name:</label>
    <div class="row align-items-center">
        <div class="col-md-10">
            <input id="searchByName" asp-for="@Model.SearchByName" class="form-control" style="height: calc(2.25rem + 2px);" />
        </div>
        <div class="col-md-2">
            <input type="submit" value="Search" class="form-control btn btn-outline-primary" style="height: calc(2.25rem + 2px);" />
        </div>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Staff[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staff[0].Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staff[0].Role)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Staff)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoleName)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.StaffId" class="btn btn-primary">Edit</a>
                    <a asp-page="./Details" asp-route-id="@item.StaffId" class="btn btn-success">Details</a>
                    <a asp-page="./Delete" asp-route-id="@item.StaffId" class="btn btn-danger">Delete</a>

                </td>

            </tr>
        }
    </tbody>
</table>
