@page
@model SE1728_Group2_A2.Pages.Reports.ReportDetailsModel
@using SE1728_Group2_A2.Pages.Reports

@{
    Layout = null;
    var orderId = ViewData["OrderId"];
    var orderDetails = ViewData["OrderDetails"] as List<OrderDetailInfo>;
    decimal total = 0;
}

<div class="modal-header">
    <h5 class="modal-title">Order ID: @orderId</h5>
   
</div>

<div class="modal-body">
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Order Detail ID</th>
                    <th>Product ID</th>
                    <th>Product Name</th>
                    <th>Category Name</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                </tr>
            </thead>
            <tbody>
                @if (orderDetails != null && orderDetails.Count > 0)
                {
                    
                            
                        
                    @foreach (var detail in orderDetails)
                    {
                        <tr>
                            <td>@detail.OrderDetailId</td>
                            <td>@detail.ProductId</td>
                            <td>@detail.ProductName</td>
                            <td>@detail.CategoryName</td>
                            <td>@detail.Quantity</td>
                            <td>@detail.UnitPrice</td>
                        </tr>
                       
                         total = total + detail.UnitPrice * detail.Quantity;
                        
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center">Không có gì</td>
                    </tr>
                }
            </tbody>
        </table>
        <h3>Total order: @total.ToString("C")</h3>
    </div>
</div>
